@using Diary.DTO;
@model EventDTO

<div class="container my-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="text-right text-primary">Event Details</h1>
        </div>
    </div>

    <!-- Photo Section -->
    <div class="row mb-4">
        <div class="col-md-4 offset-md-4 text-center">
            @if (Model.Photo != null)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo)" alt="Photo" class="img-fluid rounded-circle shadow-sm" style="width: 200px; height: 200px; object-fit: cover">

            }
            else
            {
                <p>No photo available</p>
            }
        </div>
    </div>

    <!-- Record Details -->
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    General Information
                </div>
                <div class="card-body">
                    <p><strong>Start:</strong> @Model.Start.ToString("dd.MM.yyyy")</p>
                    <p><strong>End:</strong> @Model.End.ToString("dd.MM.yyyy")</p>
                    <p><strong>Description:</strong> @Model.Description</p>
                    <p><strong>Location:</strong> @Model.Location</p>
                </div>
            </div>
        </div>

    <!-- Buttons -->
    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

