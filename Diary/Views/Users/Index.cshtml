@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "ALL USERS";
}


<div class="container">
	<div class="row pt-4">
		<div class="col-6">
            <a asp-action="Create" class=" btn btn-primary">Create new User</a>

		</div>
		<div class="col-6 text-end">
			<h2>Users</h2>
		</div>
		<div class="col-6 text-wrap">
			<p>
				This page is dedicated to manage all users.
			</p>
		</div>
	</div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (AppUser user in Model)
            {
                <tr>
                    <td>@user.Id</td> @*<td> = table data*@
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id"> Edit</a>
                    </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
